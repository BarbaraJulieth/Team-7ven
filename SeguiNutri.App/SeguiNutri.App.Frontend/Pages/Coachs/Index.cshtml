@page
@model SeguiNutri.App.Frontend.Pages.Coachs.IndexModel
@{
}
<h1>Lista de Coaches</h1>

<a class="btn btn-primary table-btn" asp-page="./RegistrarCoach">Agregar Coach</a>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="tablaCoaches" class="table table-striped table-bordered table condensed" 
                style="width:100">
                    <thead class="text-center">
                        <tr>
                            <th scope="col" >Cedula</th>
                            <th scope="col" >Nombre</th>
                            <th scope="col" >Apellido</th>
                            <th scope="col" >Fecha Nacimiento</th>
                            <th scope="col" >Correo</th>
                            <th scope="col" >Telefono</th>
                            <th scope="col" >Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Coach)
                        {
                        <tr>
                            <td>@c.Cedula</td>
                            <td>@c.Nombre</td>
                            <td>@c.Apellido</td>
                            <td>@c.FechaNacimiento</td>
                            <td>@c.Correo</td>
                            <td>@c.Telefono</td>

                           
                            <td>
                                <div class="text-center">
                                    <div class="btn-group">

                                         <a class="btn btn-primary btnActualizar" asp-page="./ActualizarCoach" asp-route-Cedula="@c.Cedula">Actualizar</a>
                                         <a class="btn btn-danger btnEliminar" asp-page="./EliminarCoach" asp-route-Cedula="@c.Cedula">Eliminar</a>
                                         
                                    </div>
                                </div>
                            </td>
                        </tr> 
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>