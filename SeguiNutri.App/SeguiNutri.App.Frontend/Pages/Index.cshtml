@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<body class="login">
    
    <div class="login-box">
        <img src="https://www.w3schools.com/images/lamp.jpg" class="avatar" alt="imagen prueba">
        <h1>Login</h1>
        <form>
            <!-- username -->
            <label for="username">Usuario</label>
            <input type="text" placeholder="Entre usuario">

            <!-- contraseña -->
            <label for="contraseña">Contraseña</label>
            <input type="password" placeholder="Entre clave">

            <!-- boton login -->
            <input type="submit" value="Log In">
            
            <a href="#" data-toggle="modal" data-target="#exampleModal">Registrarse</a><br>

        </form>
    </div>
</body>

