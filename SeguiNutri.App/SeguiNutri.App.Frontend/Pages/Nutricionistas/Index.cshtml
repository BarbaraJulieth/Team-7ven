@page
@model SeguiNutri.App.Frontend.Pages.Nutricionistas.IndexModel
@{
}
<h1>Lista de Nutricionistas</h1>

<a class="btn btn-primary table-btn" asp-page="./RegistrarNutricionista">Agregar Nutricionista</a>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="tablaCoaches" class="table table-striped table-bordered table condensed" 
                style="width:100">
                    <thead class="text-center">
                        <tr>
                            <th scope="col" >Cedula</th>
                            <th scope="col" >Nombre</th>
                            <th scope="col" >Apellido</th>
                            <th scope="col" >Fecha Nacimiento</th>
                            <th scope="col" >Correo</th>
                            <th scope="col" >Telefono</th>
                            <th scope="col" >IdNutricionista</th>
                            <th scope="col" >Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var n in Model.Nutricionista)
                        {
                        <tr>
                            <td>@n.Cedula</td>
                            <td>@n.Nombre</td>
                            <td>@n.Apellido</td>
                            <td>@n.FechaNacimiento</td>
                            <td>@n.Correo</td>
                            <td>@n.Telefono</td>
                            <td>@n.IdNutricionista</td>
                           
                            <td>
                                <div class="text-center">
                                    <div class="btn-group">
                                         <a class="btn btn-primary btnEditar" asp-page="./ActualizarNutricionista" asp-route-id="@n.Id">Editar</a>
                                         <a class="btn btn-primary btnEliminar" asp-page="./EliminarNutricionista" asp-route-id="@n.Id">Eliminar</a>
                                    </div>
                                </div>
                            </td>
                        </tr> 
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>