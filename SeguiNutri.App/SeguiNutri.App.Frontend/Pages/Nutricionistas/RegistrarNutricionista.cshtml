@page
@model SeguiNutri.App.Frontend.Pages.RegistrarNutricionistaModel
@{
}

<h1>Nuevo Nutricionista</h1>
<form method="post">

    <div class="form-group">
        <label>Cedula</label>
        <input asp-for="Nutricionista.Cedula" class="form-control" required="required">
        <span class="text-danger" asp-validation-for="Nutricionista.Cedula"></span>
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nutricionista.Nombre" class="form-control" required="required">
        <span class="text-danger" asp-validation-for="Nutricionista.Nombre"></span>
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Nutricionista.Apellido" class="form-control" required="required">
        <span class="text-danger" asp-validation-for="Nutricionista.Apellido"></span>
    </div>

    <div class="form-group">
        <label>Fecha De Nacimiento</label>
        <input asp-for="Nutricionista.FechaNacimiento" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label>Correo</label>
        <input asp-for="Nutricionista.Correo" class="form-control" required="required">
        <span class="text-danger" asp-validation-for="Nutricionista.Correo"></span>
    </div>

    <div class="form-group">
        <label>Telefono</label>
        <input asp-for="Nutricionista.Telefono" class="form-control" required="required">
        <span class="text-danger" asp-validation-for="Nutricionista.Telefono"></span>
    </div>

    <div class="form-group">
        <label>Id Nutricionista</label>
        <input asp-for="Nutricionista.IdNutricionista" class="form-control" required="required">
    </div>

    <div class="form-group mx-sm-3 mb-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./Nutricionistas" class="btn btn-primary">Cancelar</a>
    </div>

</form>