@page
@model SeguiNutri.App.Frontend.Pages.IntroModel
@{
}
<h1>Lista de Pacientes</h1>

<a class="btn btn-primary table-btn" asp-page="./Registrar">Registrar Paciente</a>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="tablaPacientes" class="table table-striped table-bordered table condensed" 
                style="width:100">
                    <thead class="text-center">
                        <tr>
                            <th scope="col" >Cedula</th>
                            <th scope="col" >Nombre</th>
                            <th scope="col" >Apellido</th>
                            <th scope="col" >Fecha Nacimiento</th>
                            <th scope="col" >Correo</th>
                            <th scope="col" >Telefono</th>
                            <th scope="col" >IdPaciente</th>
                            <th scope="col" >Contraseña</th>
                            <th scope="col" >Actualizacion de datos</th>
                            <th scope="col" >Prueba botones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Paciente)
                        {
                        <tr>
                            <td>@p.Cedula</td>
                            <td>@p.Nombre</td>
                            <td>@p.Apellido</td>
                            <td>@p.FechaNacimiento</td>
                            <td>@p.Correo</td>
                            <td>@p.Telefono</td>
                            <td>@p.IdPaciente</td>
                            <td>@p.Contraseña</td>
                            <td><a class="btn btn-secondary" asp-page="./Actualizar" asp-route-id="@p.Id">Editar</a></td>
                            <td>
                                <div class="text-center">
                                    <div class="btn-group">
                                        <a class="btn btn-primary btnEditar" asp-page="./Actualizar" asp-route-id="@p.Id">Editar</a>
                                        <button class="btn btn-danger btnBorrar"  asp-page="./Actualizar" asp-route-id="@p.Id">Eliminar</button>
                                    </div>
                                </div>
                            </td>
                        </tr> 
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>
