@page
@model SeguiNutri.App.Frontend.Pages.DetalleModel
@{
}
<h1>Historias</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="tablaSuegerencias" class="table table-striped table-bordered table condensed" 
                style="width:100">
                    <thead class="text-center">
                        <tr>
                            <th scope="col" >Id</th>
                            <th scope="col" >IdNutricionista</th>
                            <th scope="col" >IdCoach</th>
                            <th scope="col" >Sugerencias de Cuidado</th>
                            <th scope="col" >Eliminar</th>
                      </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.SeguimientoNutris)
                        {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.IdNutricionista</td>
                            <td>@p.IdCoach</td>
                            <td>@p.SugerenciasCuid</td>

                            <td>
                                <div class="text-center">
                                    <div class="btn-group">
                                        <a class="btn btn-danger btnEliminar" asp-page="./Eliminar" asp-route-Id="@p.Id">Eliminar</a>
                                         
                                    </div>
                                </div>
                            </td>



                        </tr> 
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>