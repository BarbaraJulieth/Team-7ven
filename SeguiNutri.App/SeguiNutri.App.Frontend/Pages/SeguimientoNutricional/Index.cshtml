@page
@using SeguiNutri.App.Dominio
@model SeguiNutri.App.Frontend.Pages.SeguimientoNutricional.IndexModel
@{
}
<h1>Seguimiento nutricional del Paciente @Model.paciente.Nombre  @Model.paciente.Apellido</h1>

<form method="post">
    <aside class="leftmenu">
        <div class="form-group">
            <label>Id Nutricionista</label>
            <input asp-for="Nutricionista.Id" class="form-control" readonly>        
        </div>     
        <div class="form-group">   
            <label>Id Coach</label>
            <input asp-for="SeguimientoNutris.IdCoach" class="form-control" readonly>        
        </div>     
        <div class="form-group">   
            <label>Id Paciente</label>
            <input asp-for="paciente.Id" class="form-control" readonly>
        </div>
    </aside> 
    <aside class="rightmenu">
        <div class="form-group sug">
            <div><label>Sugerencias de Cuidados</label></div>
            <input type="text" asp-for="SeguimientoNutris.SugerenciasCuid" class="form-control" required="required">
        </div>
    </aside>    
    <button type="submit" class="btn btn-primary">Registro</button>

</form>