@page
@using SeguiNutri.App.Dominio
@model SeguiNutri.App.Frontend.Pages.SeguimientoNutricional.RegistrarModel
@{
    int id = Model.Nutricionista.Id;
}

<h1>Lista de Pacientes Del Nutricionista @Model.Nutricionista.Nombre @Model.Nutricionista.Apellido</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="tablaPacientes" class="table table-striped table-bordered table condensed" 
                style="width:100">
                    <thead class="text-center">
                        <tr>
                            <th scope="col" >Cedula</th>
                            <th scope="col" >Nombre</th>
                            <th scope="col" >Apellido</th>
                            <th scope="col" >Fecha Nacimiento</th>
                            <th scope="col" >Correo</th>
                            <th scope="col" >Telefono</th>
                            <th scope="col" >IdPaciente</th>
                            <th scope="col" >Contraseña</th>
                            <th scope="col" >Seguimiento Nutricional</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Paciente)
                        {
                        <tr>
                            <td>@p.Cedula</td>
                            <td>@p.Nombre</td>
                            <td>@p.Apellido</td>
                            <td>@p.FechaNacimiento</td>
                            <td>@p.Correo</td>
                            <td>@p.Telefono</td>
                            <td>@p.IdPaciente</td>
                            <td>@p.Contraseña</td>
                            <td><a class="btn btn-primary" asp-page="./Index" asp-route-id="@id" asp-route-idPaciente="@p.Id">Sugerencia Nutricional</a></td>
                            
                        </tr> 
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>